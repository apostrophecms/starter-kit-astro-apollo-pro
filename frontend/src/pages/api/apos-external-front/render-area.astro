---
// This file must exist as a bridge between ApostropheCMS and Astro
// because Vite won't compile imports of .astro files from a .js file if both of them
// live in an external module. Otherwise we would ship it as a route in the
// apostrophe-astro module

import AposWidget from '@apostrophecms/apostrophe-astro/components/AposWidget.astro';
import { experimental_AstroContainer as AstroContainer } from 'astro/container';
import aposRenderArea from '@apostrophecms/apostrophe-astro/lib/aposRenderArea.js';

return aposRenderArea({ Astro, AstroContainer, AposWidget });
